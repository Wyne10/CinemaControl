<UserControl x:Class="CinemaControl.WeeklyReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaControl"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel for Controls -->
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <Label Content="Дата от:"/>
                <DatePicker Name="FromDatePicker"/>
                <Label Content="Дата до:"/>
                <DatePicker Name="ToDatePicker"/>
                <Button Content="Сформировать отчет" Margin="0,10,0,0"/>
            </StackPanel>
            
            <Label DockPanel.Dock="Top" Content="Скачанные файлы:" Margin="0,10,0,5"/>
            <ListBox Name="DownloadedFilesListBox" DockPanel.Dock="Top">
                <!-- Sample Items -->
                <ListBoxItem Content="report_2023-10-23.pdf"/>
                <ListBoxItem Content="report_2023-10-24.pdf"/>
                <ListBoxItem Content="report_2023-10-25.pdf"/>
            </ListBox>

            <Button Content="Открыть выбранный файл" DockPanel.Dock="Bottom" Margin="0,10,0,0"/>
        </DockPanel>

        <!-- Grid Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Right Panel for PDF Preview -->
        <DockPanel Grid.Column="2">
            <Label DockPanel.Dock="Top" Content="Предпросмотр:" />
            <Border BorderBrush="Gray" BorderThickness="1">
                <DocumentViewer Name="PdfViewer"/>
            </Border>
        </DockPanel>
    </Grid>
</UserControl> 