<UserControl x:Class="CinemaControl.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:local="clr-namespace:CinemaControl"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel for Controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical">
                <Label Content="Дата от:"/>
                <DatePicker Name="FromDatePicker"/>
                <Label Content="Дата до:"/>
                <DatePicker Name="ToDatePicker"/>
                <Button Content="Сформировать отчет" Margin="0,10,0,0" Click="GenerateReport_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Скачанные файлы:" VerticalAlignment="Center"/>
                <Image x:Name="OpenFolderIcon"
                       Width="16" Height="16" Margin="5,0,0,0"
                       Source="Assets/folder.png"
                       Cursor="Hand"
                       MouseLeftButtonUp="OpenReportFolder_Click" 
                       ToolTip="Открыть папку с отчетами"/>
            </StackPanel>
            
            <ListBox Grid.Row="2" Name="DownloadedFilesListBox" 
                     MouseDoubleClick="DownloadedFilesListBox_MouseDoubleClick"
                     SelectionChanged="DownloadedFilesListBox_SelectionChanged">
                <!-- Sample Items -->
                <ListBoxItem Content="report_2023-10-23.pdf"/>
                <ListBoxItem Content="report_2023-10-24.pdf"/>
                <ListBoxItem Content="report_2023-10-25.pdf"/>
            </ListBox>
        </Grid>

        <!-- Grid Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Right Panel for PDF Preview -->
        <DockPanel Grid.Column="2">
            <Label DockPanel.Dock="Top" Content="Предпросмотр:" />
            <Border BorderBrush="Gray" BorderThickness="1">
                <Grid>
                    <wv2:WebView2 Name="WebView" Visibility="Collapsed"/>
                    <DataGrid Name="ExcelDataGrid" Visibility="Collapsed" IsReadOnly="True" AutoGenerateColumns="True"/>
                    <ScrollViewer Name="WordScrollViewer" Visibility="Collapsed">
                        <TextBlock Name="WordTextBlock" TextWrapping="Wrap" Padding="5"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </DockPanel>
    </Grid>
</UserControl> 