<UserControl x:Class="CinemaControl.QuarterlyReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaControl"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel for Controls -->
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Label Content="Выберите год:"/>
            <DatePicker Name="YearPicker" />
            
            <Label Content="Выберите квартал:" Margin="0,10,0,0"/>
            <ComboBox Name="QuarterComboBox">
                <ComboBoxItem Content="Q1 (Январь - Март)"/>
                <ComboBoxItem Content="Q2 (Апрель - Июнь)"/>
                <ComboBoxItem Content="Q3 (Июль - Сентябрь)"/>
                <ComboBoxItem Content="Q4 (Октябрь - Декабрь)"/>
            </ComboBox>

            <Button Content="Сгенерировать отчет" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Grid Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Right Panel for Excel Preview -->
        <DockPanel Grid.Column="2">
            <Label DockPanel.Dock="Top" Content="Предпросмотр отчета (Excel):" />
            <DataGrid Name="ExcelPreviewGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
        </DockPanel>
    </Grid>
</UserControl> 