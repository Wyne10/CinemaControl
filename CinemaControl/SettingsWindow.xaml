<Window x:Class="CinemaControl.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Настройки" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="15">
        <Label Content="API токен для базы данных фильмов:"/>
        <TextBox x:Name="ApiTokenTextBox" MinWidth="300" Margin="0,0,0,15"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" MinWidth="80" IsDefault="True" Click="Save_Click"/>
            <Button Content="Отмена" MinWidth="80" IsCancel="True" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window> 