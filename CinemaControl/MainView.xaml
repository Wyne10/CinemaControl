<Window x:Class="CinemaControl.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaControl"
        mc:Ignorable="d"
        Title="Cinema Control" Height="700" Width="900">
    <Grid>
        <TabControl Margin="0,0,0,-1">
            <TabItem Header="Еженедельный отчет">
                <local:WeeklyReportView/>
            </TabItem>
            <TabItem Header="Ежемесячный отчет">
                <local:MonthlyReportView/>
            </TabItem>
            <TabItem Header="Ежеквартальный отчет">
                <local:QuarterlyReportView/>
            </TabItem>
            <!-- Другие вкладки могут быть добавлены здесь -->
        </TabControl>

        <Button x:Name="SettingsButton" 
                Width="30" Height="30" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,5,5,0"
                ToolTip="Настройки"
                Click="SettingsButton_Click">
            <Image Width="18" Height="18" Source="Assets/settings.png"/>
        </Button>
    </Grid>
</Window>
